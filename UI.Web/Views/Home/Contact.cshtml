@{
    ViewBag.Title = "İletişim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section head{
    <link href="/assets/css/toastr.min.css" rel="stylesheet" />
    <link href="/assets/css/loader.css" rel="stylesheet" />
}

<div class="container">
    <ul class="breadcrumbs">
        <li class="breadcrumbs__item">
            <a href="/" class="breadcrumbs__url">Anasayfa</a>
        </li>
        <li class="breadcrumbs__item breadcrumbs__item--current">İletişim</li>
    </ul>
</div>

<div class="main-container container" id="main-container">
    <!-- post content -->
    <div class="blog__content mb-72">
        <h1 class="page-title">İLETİŞİM</h1>

        <div class="row">
            <div class="col-lg-6">
                <h4>Bi Mesaj Bırakın</h4>
                <p>Görüşlerinizi, fikirlerinizi, eleştirilerinizi <strong>bi</strong>zimle paylaşın.</p>
                <!-- Contact Form -->

                @using (Ajax.BeginForm("ContactMessageSaveAjax", "Home",
                    new AjaxOptions()
                    {
                        HttpMethod = "POST",
                        OnBegin =   "Generic.ContactMessageSaveAjaxBegin",
                        OnSuccess = "Generic.ContactMessageSaveAjaxSuccess",
                        OnFailure = "Generic.ContactMessageSaveAjaxFailure"
                    }, new
                    {
                        @class = "contact-form mt-30 mb-30",
                        id = "contact-form"
                    }))
                {
                    <div class="row">
                        <div class="col-md-6">
                            <label for="name">
                                Ad
                                <abbr title="Zorunlu" class="required">*</abbr>
                            </label>
                            <input name="FirstName" id="firstname" type="text" required="required" />
                        </div>
                        <div class="col-md-6">
                            <label for="name">
                                Soyad
                                <abbr title="Zorunlu" class="required">*</abbr>
                            </label>
                            <input name="LastName" id="lastname" type="text" required="required" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label for="email">
                                Email 
                                <abbr title="Zorunlu" class="required">*</abbr>
                            </label>
                            <input name="email" id="email" type="email" required="required" />
                        </div>
                        <div class="col-md-6">
                            <label for="phonenumber">Telefon Numarası</label>
                            <input name="PhoneNumber" id="phonenumber" type="text" />
                        </div>
                    </div>

                    <div class="contact-message">
                        <label for="message">
                            Mesaj
                            <abbr title="Zorunlu" class="required">*</abbr></label>
                        <textarea id="message" name="Message" rows="7" required="required"></textarea>
                    </div>

                    <div class="row mb-32">
                        <div class="col-lg-12">
                            <input type="checkbox" class="checkbox-input" name="Terms" id="terms" value="1" />
                            <label class="custom-control-label text-2" for="terms">
                                <a href="#aydinlatma-metni" data-toggle="modal">Aydınlatma metnini</a> okudum ve kabul ediyorum.
                            </label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="captcha">
                                <div class="captcha-image">
                                    <img id="captcha-image" src="/Captcha/Get" />
                                </div>
                                <div class="captcha-refresh">
                                    <a href="javascrpipt:;" onclick="reloadCaptcha()">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                                            <path d="M9 12l-4.463 4.969-4.537-4.969h3c0-4.97 4.03-9 9-9 2.395 0 4.565.942 6.179 2.468l-2.004 2.231c-1.081-1.05-2.553-1.699-4.175-1.699-3.309 0-6 2.691-6 6h3zm10.463-4.969l-4.463 4.969h3c0 3.309-2.691 6-6 6-1.623 0-3.094-.65-4.175-1.699l-2.004 2.231c1.613 1.526 3.784 2.468 6.179 2.468 4.97 0 9-4.03 9-9h3l-4.537-4.969z" />
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <label for="securitycode">
                                Güvenlik Kodu
                                <abbr title="Zorunlu" class="required">*</abbr>
                            </label>
                            <input name="CaptchaCode" id="captchacode" type="text" required="required" />
                        </div>
                    </div>

                    <input type="submit" class="btn btn-lg btn-color btn-button" value="GÖNDER" id="submit-message" />
                }

            </div>
            <div class="col-lg-6">
                <h4>Bi Takip Edin</h4>
                <p>Sosyal medyadan haberlerimizi takip edebilirsiniz</p>
                <ul class="contact-items">
                    <li class="contact-item">
                        <a href="https://www.facebook.com/bihaberver" target="_blank"><i class="ui-facebook"></i>&nbsp;facebook.com/BiHaberVer</a>
                    </li>
                    <li class="contact-item">
                        <a href="https://www.twitter.com/BirHaberVer" target="_blank"><i class="ui-twitter"></i>&nbsp;twitter.com/BirHaberVer</a>
                    </li>
                    <li class="contact-item">
                        <a href="https://www.instagram.com/bihaberver" target="_blank"><i class="ui-instagram"></i>&nbsp;instagram.com/BiHaberVer</a>
                    </li>
                </ul>

                <h4>İletişim Bilgilerimiz</h4>
                <ul class="contact-items">
                    <li class="contact-item"><a href="mailto:iletisim@bihaberver.com"><i class="ui-email"></i>&nbsp;iletisim@bihaberver.com</a></li>
                </ul>

                <h4>Çalışma Saatlerimiz - Robots</h4>
                <ul class="contact-items">
                    <li class="contact-item"><i class="ui-clock"></i> 7 / 24</li>
                </ul>

                <h4>Çalışma Saatlerimiz - Humans</h4>
                <ul class="contact-items">
                    <li class="contact-item"><i class="ui-clock"></i>&nbsp;Pazartesi - Cuma: 08:00 - 17:00</li>
                    <li class="contact-item"><i class="ui-clock"></i>&nbsp;Cumartesi: 09:00 - 15:00</li>
                    <li class="contact-item"><i class="ui-clock"></i>&nbsp;Pazar:</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section bottomJS{
    <script src="/assets/js/toastr.min.js"></script>
    <script src="/assets/content/js/generic.ajax.js"></script>
    <script src="/assets/js/jquery.unobtrusive-ajax.js"></script>
    
    <script>
        function reloadCaptcha() {
            $('#captchacode').val('');
            document.getElementById("captcha-image").src = '/Captcha/Get?refresh=true&dt=' + new Date().getTime();
        }
    </script>
}