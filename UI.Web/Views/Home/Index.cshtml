        <!-- Posts -->
        <div class="col-lg-8 blog__content">

            <!-- Latest News -->
            <section class="section tab-post mb-16">
                <div class="title-wrap title-wrap--line">
                    <h3 class="section-title">SON HABERLER</h3>

                    <div class="tabs tab-post__tabs">
                        <ul class="tabs__list">
                            @{
                                var firstTab = Model.TabList.FirstOrDefault();
                                
                            }
                            @foreach (var item in Model.TabList)
                            {
                                <li class="tabs__item @(item.Key == firstTab.Key ? "tabs__item--active" : "")">
                                    <a href="#tab-cat-@item.Key.ID" class="tabs__trigger">@item.Key.Name.ToUpper(Settings.TurkishCultureInfo)</a>
                                </li>
                            }
                        </ul>
                        <!-- end tabs -->
                    </div>
                </div>

                <!-- tab content -->
                <div class="tabs__content tabs__content-trigger tab-post__tabs-content">

                    @foreach (var item in Model.TabList)
                    {
                        <div class="tabs__content-pane @(item.Key == firstTab.Key ? "tabs__content-pane--active" : "")" id="tab-cat-@item.Key.ID">
                            <div class="row card-row">
                                @foreach (var itemNews in item.Value)
                                {
                                    string url = string.Format("/Haber/{0}", SeoURLUtility.Convert(itemNews.ID, itemNews.Title));
                                    string title = itemNews.Title;
                                    
                                    <div class="col-md-6">
                                        <article class="entry card">
                                            <div class="entry__img-holder card__img-holder">
                                                <a href="@url" title="@title">
                                                    <div class="thumb-container tab-thumb-container thumb-70" style="background-image:url(@itemNews.ImageURL)">
                                                        <img data-src="@itemNews.ImageURL" src="@itemNews.ImageURL" class="entry__img lazyload hidden" 
                                                            alt="@title" title="@title" />
                                                    </div>
                                                </a>
                                                <a href="/Haber/Kategori/@SeoURLUtility.Convert(item.Key.ID, item.Key.Name)" title="@item.Key.Name"
                                                    class="entry__meta-category entry__meta-category--label entry__meta-category--align-in-corner entry__meta-category--violet">@item.Key.Name</a>
                                            </div>

                                            <div class="entry__body card__body">
                                                <div class="entry__header">

                                                    <h2 class="entry__title">
                                                        <a href="@url">@title</a>
                                                    </h2>
                                                    <ul class="entry__meta">
                                                        <li class="entry__meta-date">@itemNews.CreatedAt.ToString("dd MMMM yyyy HH:mm", Settings.TurkishCultureInfo)</li>
                                                    </ul>
                                                </div>
                                                <div class="entry__excerpt">
                                                    @if (!string.IsNullOrEmpty(itemNews.Description))
                                                    {
                                                        <p>@(itemNews.Description.Length < 75 ? itemNews.Description : itemNews.Description.Substring(0, 74))</p>
                                                    }
                                                </div>
                                            </div>
                                        </article>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    
                </div>
                <!-- end tab content -->
            </section>
