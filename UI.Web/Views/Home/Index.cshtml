<!-- Featured Posts Grid -->
<section class="featured-posts-grid">
    <div class="container">
        <div class="row row-8">

            <div class="col-lg-7">

                <div id="head-lines" class="owl-carousel owl-theme owl-carousel--arrows-outside">

                    @foreach (var item in Model.HeadlineList)
                    {
                        string url = string.Format("/Haber/{0}", SeoURLUtility.Convert(item.ID, item.Title));
                        string title = item.Title;
                        
                        <div class="featured-posts-grid__item featured-posts-grid__item--lg pt-0">
                            <article class="entry card featured-posts-grid__entry no-shadow" style="height:500px;">
                                @*entry__img-holder thumb__img-holder*@
                                <div class="entry__img-holder thumb__img-holder" style="background-image:url(@item.ImageURL)">
                                    <img src="@item.ImageURL" alt="@title" title="@title" class="entry__img d-none" />
                                    <a href="/Haber/Kategori/@SeoURLUtility.Convert(item.CategoryID, item.CategoryName)" 
                                        title="@item.CategoryName"
                                        class="entry__meta-category entry__meta-category--label entry__meta-category--align-in-corner entry__meta-category--green">
                                        @item.CategoryName
                                    </a>
                                    <a href="@url" class="thumb-url" title="@title"></a>
                                </div>

                                <div class="entry__body card__body">
                                    <h2 class="entry__title">
                                        <a href="@url" title="@title">@title</a>
                                    </h2>
                                    <ul class="entry__meta">
                                        <li class="entry__meta-date">@item.CreatedAt.ToString("dd MMMM yyyy HH:mm", Settings.TurkishCultureInfo)</li>
                                    </ul>
                                </div>
                            </article>
                        </div>
                    }

                </div>
            </div>

            <div class="col-lg-5">

                @foreach (var item in Model.HeadlineTriple)
                {
                    string url = string.Format("/Haber/{0}", SeoURLUtility.Convert(item.ID, item.Title));
                    string title = item.Title;
                    
                    <div class="featured-posts-grid__item featured-posts-grid__item--sm">
                        <article class="entry card post-list featured-posts-grid__entry">
                            <div class="entry__img-holder post-list__img-holder card__img-holder" style="background-image: url(@item.ImageURL)">
                                <a href="@url" class="thumb-url" title="@title"></a>
                                <img src="@item.ImageURL" alt="@title" title="@title" class="entry__img d-none" />
                                <a href="/Haber/Kategori/@SeoURLUtility.Convert(item.CategoryID, item.CategoryName)" title="@item.CategoryName"
                                    class="entry__meta-category entry__meta-category--label entry__meta-category--align-in-corner entry__meta-category--violet">
                                    @item.CategoryName
                                </a>
                            </div>

                            <div class="entry__body post-list__body card__body">
                                <h2 class="entry__title">
                                    <a href="@url">@title</a>
                                </h2>
                                <ul class="entry__meta">
                                    <li class="entry__meta-date">@item.CreatedAt.ToString("dd MMMM yyyy HH:mm", Settings.TurkishCultureInfo)</li>
                                </ul>
                            </div>
                        </article>
                    </div>
                }
            </div>

        </div>
    </div>
</section>
<!-- end featured posts grid -->

<div class="main-container container pt-24" id="main-container">

